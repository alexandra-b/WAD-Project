<%- include header %>
      <title>Add Recipe</title>
      <link rel="stylesheet" href="/css/addrecipe.css">
  </head>
  <body>
<%- include menuSubmenu %>
    <form class="form-basic" role="form" method="post" action="">

        <div class="form-title-row">
            <h1>Add recipe</h1>
        </div>

        <div class="form-row">
            <label>
                <span>Recipe title</span>
                <input type="text" name="title">
            </label>
        </div>

        <div class="form-row">
            <label>
                <span>Link to an image</span>
                <input type="text" name="imglink">
            </label>
        </div>

        <div class="form-row">
            <label>
                <span>Category</span>
                <select name="dropdown">
                    <option>Drinks</option>
                    <option>Appetizers</option>
                    <option>Main Dish</option>
                    <option>Dessert </option>
                </select>
            </label>
        </div>

        <div class="form-row" id="ingred">
            <label>
                <span>Ingredients</span>
                <textarea name="ingredtextarea"></textarea>
            </label>
        </div>

        <div class="form-row">
            <label>
                <span>How to:</span>
                <textarea name="howtotextarea"></textarea>
            </label>
        </div>
<!--
        <div class="form-row">
            <label>
                <span>Checkbox</span>
                <input type="checkbox" name="checkbox" checked>
            </label>
        </div>
-->
        <div class="form-row">
            <label><span>Difficulty level of recipe:</span></label>
            <div class="form-radio-buttons">

                <div>
                    <label>
                        <input type="radio" name="radio" value="0">
                        <span>Easy</span>
                    </label>
                </div>

                <div>
                    <label>
                        <input type="radio" name="radio" value="1">
                        <span>Intermidiate</span>
                    </label>
                </div>

                <div>
                    <label>
                        <input type="radio" name="radio" value="2">
                        <span>Hard</span>
                    </label>
                </div>
                <div>
                  <label>
                    <input type="submit" name="submit" value="Add recipe">
                  </label>
                </div>
            </div>
        </div>
<!--
        <div class="form-row">
            <button type="submit">Add Recipe</button>
        </div>
-->
    </form>


  </body>
<%- include footer %>
